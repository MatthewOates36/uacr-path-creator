{
  "name": "uacr-path-creator",
  "version": "1.0.0",
  "description": "Path creation tool for Up-A-Creek Robotics Pure Pursuit paths",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac":  "electron-packager . 'Path Creator' --platform=darwin --arch=x64 --out=output --icon=icons/icon.icns --ignore=.idea --ignore=.git --ignore=.gitignore --ignore=uacr-path-creator.iml --ignore=icons",
    "package-win":  "electron-packager . 'Path Creator' --platform=win32 --arch=x64 --out=output --icon=icons/icon.ico --ignore=.idea --ignore=.git --ignore=.gitignore --ignore=uacr-path-creator.iml --ignore=icons"
  },
  "keywords": [],
